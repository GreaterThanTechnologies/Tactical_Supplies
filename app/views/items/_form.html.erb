<%=form_for(@item) do |f|%>
  <%=f.label("Item Name:") %>
  <%=f.text_field(:name) %>
  <%=f.label("Supplies:") %>
  <%=f.fields_for :supplies do |m| %>
    <%=m.label "Quantity"%>
    <%=m.number_field :quantity%>
    <%=m.label "Units"%>
    <%=m.text_field :unit%>
  <%end%>
  <%=f.submit "Submit"%>
<%end%>