<div class="parent">
    <div class="div1">
        <h1 class="center big">Sign Up</h1>
    </div>

<% @errors && @errors.each do |e| %>
  <li><%=e%></li>
<%end%>

<%= form_for @owner, url: signup_path do |f| %>
  <div class="div2 buttonDiv"><%=f.label "Username"%><%=f.text_field :username%></div>
  <div class="div2 buttonDiv"><%=f.label "Password"%><%=f.password_field :password %></div>
  <div class="div2 buttonDiv"><%=f.label "Password Confirmation"%><%=f.password_field :password_confirmation %></div>
  <div class="div2 buttonDiv"><%=f.submit "Sign Up"%></div>
<%end%>
</div>